# Etapa de construcción
FROM node:20 as build

# Establece el directorio de trabajo en la raíz del proyecto
WORKDIR /app

# Copia los archivos de configuración
COPY package*.json ./
RUN npm install

# Copia todo el resto del código
COPY . .

# Construye la aplicación Angular
RUN npm run build --prod

# Etapa de producción
FROM nginx:alpine

# Copia los archivos construidos en la etapa anterior al contenedor de nginx
COPY --from=build /app/dist/cordobacelulares /usr/share/nginx/html

# Expone el puerto 80 para el tráfico HTTP
EXPOSE 80

# Comando para iniciar nginx
CMD ["nginx", "-g", "daemon off;"]
